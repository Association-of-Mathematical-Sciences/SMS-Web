---
const DELTA = "/SMS-Web/delta.svg";   // dark icon
const LAMBDA = "/SMS-Web/lambda.svg"; // light icon
---

<button
  id="themeToggle"
  type="button"
  class="rounded-xl border border-black/10 
  bg-[#003049] dark:bg-white/70 px-3 py-2 text-sm 
  font-semibold text-[#003049] backdrop-blur flex 
  items-center gap-2"
  aria-label="Toggle theme"
  aria-pressed="false">
  <img id="themeIconLight" src={LAMBDA} alt="lambda" aria-hidden="true" class="h-5 w-5" />
  <img id="themeIconDark" src={DELTA} alt="delta" aria-hidden="true" class="h-5 w-5 hidden" />
</button>
