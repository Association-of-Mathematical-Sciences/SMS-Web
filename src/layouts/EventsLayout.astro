---
import BaseLayout from "./BaseLayout.astro";

const { frontmatter } = Astro.props;
const pathname = Astro.url?.pathname ?? "";

const { title, tag, semester, date, where, description } = frontmatter ?? {};

const required = ["title", "tag", "semester", "date", "where"];
for (const key of required) {
  if (!frontmatter?.[key]) console.warn(`[EventsLayout] Missing "${key}" in:`, pathname);
}

const pageTitle = title ? `${title} · AMS` : "Event · AMS";
const pageDescription =
  description ?? (title && semester ? `${title} (${semester})` : "Event information for AMS.");

const base = import.meta.env.BASE_URL;
const withBase = (p: string) =>
  base === "/" ? p : (p.startsWith(base) ? p : base.replace(/\/$/, "") + p);
---

<BaseLayout pageTitle={pageTitle} pageDescription={pageDescription}>
  <section class="bg-[#fef8ec] dark:bg-[#003049]">
    <div class="mx-auto max-w-6xl px-6 py-12 sm:py-16">
      <a
        href={withBase("/events")}
        class="inline-flex items-center gap-2 text-sm font-semibold text-[#003049] hover:underline dark:text-[#fef8ec]"
      >
        <span aria-hidden="true">←</span> Back to events
      </a>

      <!-- Blog-style header (no big box) -->
      <header class="mx-auto mt-8 max-w-3xl">
        <div class="flex flex-wrap items-center gap-3">
          <span
            class="rounded-full border border-[#003049]/20 bg-white/70 px-3 py-1 text-xs font-semibold text-[#003049]
                   dark:border-white/20 dark:bg-white/10 dark:text-[#fef8ec]"
          >
            {tag}
          </span>
          <span class="text-xs font-semibold text-slate-600 dark:text-[#fef8ec]/70">
            {semester}
          </span>
        </div>

        <h1 class="mt-4 font-serif text-3xl leading-tight text-[#003049] dark:text-[#fef8ec] sm:text-5xl">
          {title}
        </h1>

        {description && (
          <p class="mt-4 text-lg leading-relaxed text-slate-700 dark:text-[#fef8ec]/80">
            {description}
          </p>
        )}

        <div class="mt-6 flex flex-col gap-2 border-t border-[#003049]/15 pt-6 text-sm text-slate-700 dark:border-white/15 dark:text-[#fef8ec]/80 sm:flex-row sm:items-center sm:gap-6">
          <div class="flex items-center gap-2">
            <span class="font-semibold text-[#003049] dark:text-[#fef8ec]">When:</span>
            <span>{date}</span>
          </div>
          <div class="flex items-center gap-2">
            <span class="font-semibold text-[#003049] dark:text-[#fef8ec]">Where:</span>
            <span>{where}</span>
          </div>
        </div>
      </header>

      <!-- Blog content -->
      <article
        class="prose prose-slate mx-auto mt-10 max-w-3xl dark:prose-invert
               prose-headings:font-serif
               prose-headings:text-[#003049] dark:prose-headings:text-[#fef8ec]
               prose-a:text-[#c1121f] prose-a:font-semibold
               prose-hr:border-[#003049]/15 dark:prose-hr:border-white/15"
      >
        <slot />
      </article>
    </div>
  </section>
</BaseLayout>
